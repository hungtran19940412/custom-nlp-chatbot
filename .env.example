# Security
JWT_SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Model Configuration
MODEL_NAME=gpt2
MAX_LENGTH=100
TEMPERATURE=0.7
TOP_P=0.9
MODEL_DEVICE=cuda  # or cpu

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/chatbot_db
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True
CORS_ORIGINS=["http://localhost:3000"]
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SIZE=3600

# Training Configuration
BATCH_SIZE=8
EPOCHS=3
LEARNING_RATE=2e-5
TRAIN_DATA_PATH=data/processed/train
VALID_DATA_PATH=data/processed/valid
MODEL_SAVE_PATH=models/fine_tuned

# Logging and Monitoring
LOG_LEVEL=INFO
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# External APIs
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
YAHOO_FINANCE_API_KEY=your-yahoo-finance-key
SUPPORT_TICKET_API_KEY=your-support-ticket-key

# Knowledge Graph
KG_DATABASE_URL=neo4j://localhost:7687
KG_USERNAME=neo4j
KG_PASSWORD=password

# MLOps
MLFLOW_TRACKING_URI=http://localhost:5000
WANDB_API_KEY=your-wandb-key

# Deployment
DOCKER_REGISTRY=your-docker-registry
KUBERNETES_NAMESPACE=custom-nlp-chatbot
AWS_ACCESS_KEY_ID=your-aws-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2
